package src;

import javax.swing.*;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		/* Receive user input through drag and drop GUI */
		
		// Create frame:
		JFrame frame = new JFrame("Setup");
		
		// Quit the program upon closing window:
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

		// Create components to put in the frame:
		
		// Size the frame:
		//frame.pack();
		frame.setSize(480, 1200);
		
		// Display frame:
		frame.setVisible(true);
		
		JTextArea textArea = new JTextArea(5,20);
		textArea.setText("Hello world1\nHello world2\nHello world3");
		JScrollPane scrollPane = new JScrollPane(textArea);
		textArea.setEditable(false);
		frame.add(scrollPane);
		frame.pack();
	}

}
