package src;

import java.awt.Dimension;

import javax.swing.*;

public class Main {

	public static void main(String[] args) {
		
		// Create frame:
		JFrame frame = new JFrame("Setup");
		// Size the frame:
		frame.setSize(600, 600);
		
		// Quit the program upon closing window:
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

		JTextArea textArea = new JTextArea(5,20);
		textArea.setLocation(0, 200);
		textArea.setText("Hello world1\nHello world2\nHello world3");
		JScrollPane scrollPane = new JScrollPane(textArea);
		textArea.setEditable(false);
		frame.add(scrollPane);
//		frame.pack();		
		
		// Create components to put in the frame:
		DrawPanel drawPanel = new DrawPanel();
		drawPanel.setLocation(300, 0);
		drawPanel.setSize(20, 20);
//		drawPanel.setBounds(300, 0, 200, 200);
		drawPanel.setPreferredSize(new Dimension(400, 200));
		drawPanel.setVisible(true);
		frame.add(drawPanel);
		frame.pack();
		
		// Display frame:
		frame.setVisible(true);
	}

}
